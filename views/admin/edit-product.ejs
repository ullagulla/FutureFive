<%- include("../includes/header.ejs") %>
<%- include("../includes/script.ejs") %>

<body>
    <%- include("../includes/navbar.ejs") %>

    <div class="dash-logout text-right m-3">
        <p class="lead ">VÃ¤lkommen <%= user.name %>
        </p>
        <a href="/admin/signout" class="btn btn-secondary">Logga ut</a>
    </div>


    <div class="container" style="margin-top:20px;">
        <div class="row">
            <div class="col-12 flex-column">
                <h1 class="display-6 font-weight-bold pb-2"><u>Redigera produkt</u></h1>
            </div>
            <div class="col-6">
                <div class="img-wrapper pb-5"><img src="<%=product.imageUrl%>" /></div>
            </div>
            <div class="col-6">
                <main role="main">

                    <form id="addp" action="/edit/<%=product._id%>" method="POST" class="pb-5">

                        <div class="form-group">
                            <label>Produktnamn</label>
                            <input type="name" class="form-control" name="productName" id="productname"
                                placeholder="Produktnamn" value="<%=product.name%>" required>
                        </div>
                        <div class="form-group">
                            <label>Pris</label>
                            <input type="number" class="form-control" name="productPrice" id="price" placeholder="Pris"
                                value="<%=product.price%>" required>
                        </div>

                        <div class="form-group">
                            <label>Beskrivning</label>
                            <input type="text" class="form-control" name="productDescription" id="Beskrivning"
                                placeholder="Product Beskrivning" value="<%=product.description%>" required>
                        </div>

                        <button class="button" type="submit">Redigera produkt</button>
                    </form>
                </main>
            </div>
        </div>
    </div>
    <%- include("../includes/footer.ejs") %>
</body>