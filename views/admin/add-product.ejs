<%- include("../includes/header.ejs") %>
<%- include("../includes/script.ejs") %>

<body>
    <%- include("../includes/navbar.ejs") %>

    <div class="dash-logout text-right m-3">
        <p class="lead">Välkommen <%= user.name %>
        </p>
        <a href="/admin/signout" class="btn btn-secondary">Logga ut</a>
    </div>


    <div class="container">
        <div class="row">
            <div class="col-6">
                <h1 class="text-center add-product-header font-weight-bold"><u>Lägg till produkt</u></h1>
                <br>
                <main role="main">
            </div>
            <div class="col-6">
                <form id="addproduct" action="/admin/addproducts" method="POST">

                    <div class="form-group">
                        <label>Produktnamn</label>
                        <input type="name" class="form-control" name="productName" id="productname"
                            placeholder="Produktnamn" required>
                    </div>
                    <div class="form-group">
                        <label>Pris</label>
                        <input type="number" class="form-control" name="productPrice" id="price" placeholder="Pris"
                            required>
                    </div>

                    <div class="form-group">
                        <label>Beskrivning</label>
                        <input type="text" class="form-control" name="productDescription" id="Beskrivning"
                            placeholder="Product Beskrivning" required>
                    </div>

                    <div class="form-group">
                        <label>Ladda upp foto</label>
                        <input type="file" class="" name="imageUrl" id="productphoto" required="required">
                    </div>
                    <button class="button btn mb-4" type="submit">Lägg till produkt</button>
                </form>
            </div>
            </main>
        </div>
    </div>
    <%- include("../includes/footer.ejs") %>
</body>